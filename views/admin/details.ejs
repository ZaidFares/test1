<%- include('master_header'); -%>

<div class="card">
    <div class="card-header">
        Reader Details
        
    </div>
    <div class="card-body">

        <ul class="list-group list-group-flush">
            
            <li class="list-group-item">
                <div class="form-group row">
                    <label for="ID" class="col-sm-2 col-form-label">Reader Name:</label>
                    <div class="col-sm-10">
                        <%= reader.ReaderName %>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="form-group row">
                    <label for="ID" class="col-sm-2 col-form-label">Description:</label>
                    <div class="col-sm-10">
                        <%= reader.Description %>
                    </div>
                </div>
            </li>
        </ul>


        <a href="/api/gateway/index/" style="margin-right: 0.5rem; margin-left: 0.5rem;" class="float-right btn btn-primary">Back</a>
        <a href="/api/gateway/antenna/<%= reader.Id %>" class="btn btn-success">Antenna</a>
    </div>
</div>

<%- include('master_footer'); -%>
