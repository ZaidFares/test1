<%- include('master_header'); -%>
<style>
    .form-control {
      -webkit-box-shadow: inset 0 0px 0 rgba(0,0,0,0.075);
      box-shadow: inset 0 px 0 rgba(0,0,0,0.075);
  }
  </style>
<div class="card">
    <div class="card-header">
        Reader Details
    </div>
    <div class="card-body">
        <form action="/api/gateway/edit_reader/<%= reader.Id %>" method="POST">
            <ul class="list-group list-group-flush">
                
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">Reader Name:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="<%= reader.ReaderName %>" name="ReaderName"
                                id="ReaderName">
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">Description:</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" value="<%= reader.Description %>"
                                name="Description" id="Description">
        
                        </div>
                    </div>
                </li>
            </ul>
            <div class="form-group row">
                <div class="col-sm-10">
                  <a href="/api/gateway/index/" style="margin-right: 0.5rem; margin-left: 0.5rem;" class="float-right btn btn-primary">Back</a>
                  <button type="submit" class="float-right btn btn-warning">Update</button>
                </div>
              </div>
        </form>
    </div>
</div>

<%- include('master_footer'); -%>
