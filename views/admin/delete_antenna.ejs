<%- include('master_header'); -%>
<style>
    .form-control {
      -webkit-box-shadow: inset 0 0px 0 rgba(0,0,0,0.075);
      box-shadow: inset 0 px 0 rgba(0,0,0,0.075);
  }
  </style>
<div class="card">
    <div class="card-header">
        Are you sure you want to delete this antenna?
    </div>
    <div class="card-body">
        <form action="/api/gateway/delete_antenna/<%= antenna.Id %>" method="POST">
            <ul class="list-group list-group-flush">
                <input type="hidden" readonly class="form-control" value="<%= antenna.ReaderId %>" name="ReaderId"
                id="ReaderId">
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">Altitude:</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" value="<%= antenna.Altitude %>" name="Altitude"
                                id="Altitude">
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">Latitude:</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" value="<%= antenna.Latitude %>"
                                name="Latitude" id="Latitude">
        
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">Longitude:</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" value="<%= antenna.Longitude %>"
                                name="Longitude" id="Longitude">
        
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">RackNo:</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" value="<%= antenna.RackNo %>"
                                name="RackNo" id="RackNo">
        
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">AntennaPort:</label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" value="<%= antenna.AntennaPort %>"
                                name="AntennaPort" id="AntennaPort">
        
                        </div>
                    </div>
                </li>
                <li class="list-group-item">
                    <div class="form-group row">
                        <label for="ID" class="col-sm-2 col-form-label">Rack Mounted:</label>
                        <div class="col-sm-10">
                            <input type="checkbox" disabled="disabled" style="width: auto;" class="form-control" value="<%= antenna.RackMounted %>"
                                name="RackMounted" id="RackMounted">
        
                        </div>
                    </div>
                </li>
            </ul>
            <div class="form-group row">
                <div class="col-sm-10">
                  <a href="/api/gateway/antenna/<%= antenna.ReaderId %>" style="margin-right: 0.5rem; margin-left: 0.5rem;" class="float-right btn btn-primary">Back</a>
                  <button href="/api/gateway/antenna/<%= antenna.ReaderId %>" type="submit" id="Deletebtn" class="float-right btn btn-danger">Delete</button>
                </div>
              </div>
        </form>
    </div>
</div>
<script src="https://code.jquery.com/jquery-1.9.1.min.js"></script>
<script>
  $(document).ready(function() {
   if($("#RackMounted").val()=="1"){
    $('#RackMounted').prop('checked', true);
   }else{
    $('#RackMounted').prop('checked', false);
   }
});
$('#Deletebtn').click(function(e) {
        
        return window.confirm("Are you sure you want to delete this record?");
    });

</script>
<%- include('master_footer'); -%>